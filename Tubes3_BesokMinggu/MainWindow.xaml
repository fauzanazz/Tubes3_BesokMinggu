<Window x:Class="Tubes3_BesokMinggu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tubes3_BesokMinggu"
        mc:Ignorable="d"
        Title="MainWindow" Height="740" Width="1024">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0">
            <TextBlock Text="Toe Scanner V0.1" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="333"/>
                    <ColumnDefinition Width="333"/>
                    <ColumnDefinition Width="333"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Button Name="ImageButton" Click="ImageButton_Click">
                        <Image Name="MyImage" Source="default.jpg" Stretch="Uniform"/>
                    </Button>
                </Grid>
                
                <Grid Grid.Column="1">
                    <Image Name="ResultImage" Source="default.jpg" Stretch="Uniform"/>
                </Grid>
                
                <Grid Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="NIK = " />
                        <TextBlock Text="{Binding NIK}" />
                        <TextBlock Text="Tempat Lahir = " />
                        <TextBlock Text="{Binding TempatLahir}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid Margin="10">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Button Name="LoadButton" Click="LoadButton_Click">Load</Button>
                </Grid>
                
                <Grid Grid.Column="1">
                    <Button Name="SaveButton" Click="SaveButton_Click">Save</Button>
                </Grid>
                
                <Grid Grid.Column="2">
                    <TextBlock Name="ResultText" Text="Hai"/>
                </Grid>
                
                <Grid Grid.Column="3">
                    <Button Name="ExitButton" Click="ExitButton_Click">Exit</Button>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</Window>
